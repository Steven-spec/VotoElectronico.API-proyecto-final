@{
    ViewData["Title"] = "Panel de Candidato";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">
                <i class="fas fa-id-badge"></i> Panel de Candidato
            </h1>
            <p class="text-muted">Bienvenido, @Context.Session.GetString("UserName")</p>
        </div>
    </div>

    <!-- Información del Candidato -->
    @if (ViewBag.Usuario != null)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5><i class="fas fa-user"></i> Mi Información</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Nombre:</strong> @ViewBag.Usuario.Nombres @ViewBag.Usuario.Apellidos</p>
                                <p><strong>Cédula:</strong> @ViewBag.Usuario.Cedula</p>
                                <p><strong>Email:</strong> @ViewBag.Usuario.Email</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Rol:</strong> <span class="badge bg-info">Candidato</span></p>
                                <p><strong>Estado:</strong> <span class="badge bg-success">Activo</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Candidaturas -->
    @if (ViewBag.MisCandidaturas != null && ViewBag.MisCandidaturas.Count > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5><i class="fas fa-list"></i> Mis Candidaturas</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var candidatura in ViewBag.MisCandidaturas)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5>@candidatura.Cargo?.Nombre</h5>
                                    <p><strong>Partido:</strong> @candidatura.Partido?.Nombre (@candidatura.Partido?.Siglas)</p>
                                    <p><strong>Número:</strong> @candidatura.NumeroCandidato</p>
                                    <p><strong>Propuestas:</strong> @candidatura.Propuestas</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-info-circle"></i> Aún no estás registrado en ninguna elección como candidato.
        </div>
    }
</div>