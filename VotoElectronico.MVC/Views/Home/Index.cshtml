@{
    ViewData["Title"] = "Inicio";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h1 class="display-3 fw-bold text-primary">
                <i class="fas fa-vote-yea"></i> Sistema de Voto Electrónico
            </h1>
            <p class="lead text-muted mt-3">
                Plataforma segura y transparente para ejercer tu derecho al voto
            </p>
        </div>
    </div>

    <!-- Botones de Acceso -->
    <div class="row mt-5 justify-content-center">
        <div class="col-md-4 mb-3">
            <div class="card shadow-lg h-100 border-primary">
                <div class="card-body text-center p-5">
                    <i class="fas fa-sign-in-alt fa-5x text-primary mb-4"></i>
                    <h3 class="card-title">Iniciar Sesión</h3>
                    <p class="card-text">¿Ya tienes una cuenta? Ingresa aquí para votar.</p>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg w-100 mt-3">
                        <i class="fas fa-arrow-right"></i> Ingresar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-lg h-100 border-success">
                <div class="card-body text-center p-5">
                    <i class="fas fa-user-plus fa-5x text-success mb-4"></i>
                    <h3 class="card-title">Registrarse</h3>
                    <p class="card-text">¿Primera vez? Crea tu cuenta de votante aquí.</p>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-success btn-lg w-100 mt-3">
                        <i class="fas fa-check"></i> Registrarse
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Elecciones Activas -->
    @if (ViewBag.EleccionesActivas != null && ViewBag.EleccionesActivas.Count > 0)
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="alert alert-info shadow">
                    <h4 class="alert-heading">
                        <i class="fas fa-bullhorn"></i> ¡Elecciones Activas!
                    </h4>
                    <hr />
                    @foreach (var eleccion in ViewBag.EleccionesActivas)
                    {
                        <div class="mb-3">
                            <h5>@eleccion.Nombre</h5>
                            <p>@eleccion.Descripcion</p>
                            <small>
                                <strong>Votación:</strong>
                                @eleccion.FechaInicio.ToString("dd/MM/yyyy HH:mm") -
                                @eleccion.FechaFin.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    }
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary mt-2">
                        <i class="fas fa-vote-yea"></i> Votar Ahora
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Características del Sistema -->
    <div class="row mt-5 mb-5">
        <div class="col-12 text-center mb-4">
            <h2>¿Por qué usar nuestro sistema?</h2>
        </div>

        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="fas fa-shield-alt fa-4x text-primary mb-3"></i>
                <h5>Seguro</h5>
                <p class="text-muted">Encriptación de extremo a extremo</p>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="fas fa-user-secret fa-4x text-success mb-3"></i>
                <h5>Anónimo</h5>
                <p class="text-muted">Tu voto es completamente confidencial</p>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="fas fa-check-double fa-4x text-info mb-3"></i>
                <h5>Auditable</h5>
                <p class="text-muted">Sistema verificable y transparente</p>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="fas fa-mobile-alt fa-4x text-warning mb-3"></i>
                <h5>Accesible</h5>
                <p class="text-muted">Vota desde cualquier dispositivo</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }
    </style>
}