@model Models.Usuario

@{
    ViewData["Title"] = "Registrar Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-user-plus"></i> Registrar Nuevo Usuario</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @ViewBag.Success
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="RegistrarUsuario" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cedula" class="form-label">
                                    <i class="fas fa-id-card"></i> Cédula *
                                </label>
                                <input asp-for="Cedula" class="form-control" placeholder="1234567890" required />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Correo Electrónico *
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="usuario@email.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombres" class="form-label">
                                    <i class="fas fa-user"></i> Nombres *
                                </label>
                                <input asp-for="Nombres" class="form-control" placeholder="Juan Carlos" required />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellidos" class="form-label">
                                    <i class="fas fa-user"></i> Apellidos *
                                </label>
                                <input asp-for="Apellidos" class="form-control" placeholder="Pérez García" required />
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PasswordHash" class="form-label">
                                    <i class="fas fa-lock"></i> Contraseña *
                                </label>
                                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="••••••••" required />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                <small class="text-muted">Esta será la contraseña temporal del usuario</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Rol" class="form-label">
                                    <i class="fas fa-user-tag"></i> Tipo de Usuario *
                                </label>
                                <select asp-for="Rol" class="form-select" required>
                                    <option value="">-- Seleccione --</option>
                                    <option value="Votante">Votante</option>
                                    <option value="Candidato">Candidato</option>
                                    <option value="Administrador">Administrador</option>
                                </select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Información</h6>
                            <ul class="mb-0">
                                <li><strong>Votante:</strong> Podrá votar en elecciones activas</li>
                                <li><strong>Candidato:</strong> Podrá ser postulado a cargos (debe ser vinculado después)</li>
                                <li><strong>Administrador:</strong> Tendrá acceso total al sistema</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> Registrar Usuario
                            </button>
                            <a asp-action="Usuarios" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Volver a Usuarios
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}